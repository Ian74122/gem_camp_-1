<h1>Post list</h1>

<% @posts.each do |post| %>
  <ul>
    <li><%= post.user.email %></li>
    <li>id:<%= post.id %></li>
    <li>title:<%= post.title %></li>
    <li>content:<%= post.content %></li>
    <li><%= link_to :comments, post_comments_path(post) %></li>
    <li><%= link_to "show this post #{post.id}", post_path(post) %></li>
    <li><%= link_to "edit this post #{post.id}", edit_post_path(post) if post.user == current_user %></li>
    <li>
      <%= form_for post, url: post_path(post), method: :delete do |f| %>
        <%= f.submit 'delete' %>
      <% end %>
    </li>
  </ul>
<% end %>

<%= link_to 'New', new_post_path %>